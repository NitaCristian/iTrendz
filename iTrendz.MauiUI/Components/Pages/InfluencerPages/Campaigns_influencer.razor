@page "/campaign-influencer"

@using iTrendz.Domain.Interfaces
@inject NavigationManager Navigation
@inject ICampaignService CampaignService


    <MudGrid Spacing="2">
          <MudItem xs="12">

                <MudCard Elevation="1"  >
                    <div class="relative" Style="height: 165px;">
                        <MudCardMedia Image= https://picsum.photos/200/300 Height="165" Style="width: 100%; height: 100%;" />
                        <MudFab Color="Color.Primary" StartIcon=@Icons.Material.Filled.PushPin Size="Size.Small"
                                Class="absolute" Style="right: 10px; top: 10px; z-index: 10;" />
                    </div>

                    <MudCardContent Class="relative">
                        <MudText Typo="Typo.h5" Style="text-align: center; margin-bottom: 20px;">@campaign.Title</MudText>
                        <MudText Typo="Typo.body2">@campaign.Description</MudText>

                        <div class="d-flex justify-space-between">
                            <MudFab Color="Color.Secondary" StartIcon=@Icons.Material.Filled.Delete Size="Size.Small"  />
                            <MudFab Color="Color.Tertiary" StartIcon=@Icons.Material.Filled.Edit Size="Size.Small"  />
                        </div>
                    </MudCardContent>
                </MudCard>
            </MudItem>
   
    </MudGrid>


