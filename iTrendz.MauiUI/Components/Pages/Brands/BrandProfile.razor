                StartDate = new(2023, 07, 15),
            },
            Description = "A successful campaign to promote summer fashion trends.",
        },

        new Campaign
        {
            Title = "Tech Gadget Unboxing",
            ImageURL = "https://example.com/techgadget.jpg",
            CampaignDetails = new()
            {
                StartDate = new(2023, 07, 15),
            },
            Description = "Influencers unboxed the latest tech gadgets.",
        },

        new Campaign
        {
            Title = "Healthy Living Awareness",
