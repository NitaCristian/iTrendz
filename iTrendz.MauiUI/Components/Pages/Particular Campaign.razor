	public static string FormatNumber(int number)
	{
		return number switch
		{
			>= 1000 and < 1000000 => (number / 1000D).ToString("0.#") + "k",
			>= 1000000 => (number / 1000000D).ToString("0.#") + "M",
			_ => number.ToString()
		};
	}

