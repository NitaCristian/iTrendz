@code {
    [Parameter] public string Label { get; set; }
    [Parameter] public string Value { get; set; }
    [Parameter] public string Icon { get; set; }
    [Parameter] public Color IconColor { get; set; } = Color.Secondary;
}

<MudItem xs="3">
    @* <div class="d-flex justify-between align-center mt-5">
    </div> *@
        <MudCard>
            <MudCardContent>
                <div class="d-flex justify-start align-start">
                    <!-- Textul din stânga -->
                    <div class="d-flex flex-column">
                        <MudStack Wrap="Wrap.Wrap" Spacing="1">
                            <!-- Label-ul (Textul de sus) -->
                            <MudText Typo="Typo.h6" Style="font-size: 10px;font-weight: 200">@Label</MudText>
                            <!-- Valoarea (Textul de jos) -->
                            <MudText Typo="Typo.h4" Style="display: inline-block; margin-right: 30px;font-size:25px;font-weight: 500;">@Value</MudText>
                        </MudStack>
                    </div>

                    <!-- Iconul din dreapta -->
                    <div class="ml-auto mb-auto mt-auto">
                        <MudIcon Icon="@Icon" Color="@IconColor" Size="Size.Large" />
                    </div>
                </div>
            </MudCardContent>
        </MudCard>
</MudItem>
