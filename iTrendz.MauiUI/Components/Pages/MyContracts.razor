@page "/my-contracts"

@using iTrendz.Domain.Interfaces
@inject NavigationManager Navigation
@inject ICampaignService CampaignService

<MudGrid Spacing="2">
    <MudItem xs="12" sm="6" md="4">
        <MudCard Elevation="1" Class="relative" Style="position: relative;" OnClick="NavigateToPage">
            <div class="relative" Style="height: 165px;">
                <MudCardMedia Image="https://picsum.photos/200/300" Height="165" Style="width: 100%; height: 100%;" />
            </div>

            <MudCardContent Class="relative" Style="padding-bottom: 50px;">
                <MudText Typo="Typo.h5" Style="text-align: center; margin-bottom: 20px;">Title</MudText>
                <MudText Typo="Typo.body2">
                    Campania noastră de publicitate îți oferă vizibilitate maximă, conectându-te direct cu publicul țintă prin strategii inovatoare și eficiente.
                    Folosim canale digitale de top pentru a atrage atenția asupra produsului tău, crescând notorietatea brandului și conversiile. Mesajul tău va ajunge
                    la milioane de utilizatori relevanți, generând impact imediat și măsurabil.
                </MudText>
                <MudProgressLinear Color="Color.Info" Size="Size.Large" Value="25" Class="my-7">
                    <MudText Typo="Typo.subtitle1" Color="Color.Dark">
                        <b>25%</b>
                    </MudText>
                </MudProgressLinear>

                <!-- Grid pentru etichete și butoane -->
                <MudGrid Spacing="2">
                    <!-- Coloană pentru butonul "Unstarted" -->
                    <MudItem xs="4">
                        <MudText Typo="Typo.caption" TextAlign="Center">Unstarted</MudText>
                        <MudFab Color="Color.Error" StartIcon="@Icons.Material.Filled.HourglassEmpty" Size="Size.Medium" FullWidth="true" />
                    </MudItem>

                    <!-- Coloană pentru butonul "In Progress" -->
                    <MudItem xs="4">
                        <MudText Typo="Typo.caption" TextAlign="Center">In Progress</MudText>
                        <MudFab Color="Color.Info" StartIcon="@Icons.Material.Filled.Autorenew" Size="Size.Medium" FullWidth="true" />
                    </MudItem>

                    <!-- Coloană pentru butonul "Done" -->
                    <MudItem xs="4">
                        <MudText Typo="Typo.caption" TextAlign="Center">Done</MudText>
                        <MudFab Color="Color.Success" StartIcon="@Icons.Material.Filled.CheckCircle" Size="Size.Medium" FullWidth="true" />
                    </MudItem>
                </MudGrid>

            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>

@code {
    private void NavigateToPage()
    {
        // Navigarea poate fi implementată aici
    }
}
