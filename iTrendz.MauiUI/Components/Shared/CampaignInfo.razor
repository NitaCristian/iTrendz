<MudStack>
    @if (Campaign is null)
    {
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="24px" Animation="Animation.Wave"/>
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="24px" Animation="Animation.Wave"/>
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="24px" Animation="Animation.Wave"/>
    }
    else
    {
        <MudText>
            Period:
            <MudChip T="string" Icon="@Icons.Material.Filled.DateRange" Color="Color.Info">
                @Campaign.Period.StartDate.ToString("dd/MM/yyyy") - @Campaign.Period.EndDate.ToString("dd/MM/yyyy")
            </MudChip>
        </MudText>
        <MudText>
            Type:
            <MudChip T="string" Icon="@Icons.Material.Filled.Campaign" Style="@($"color: white; background-color: {Colors.Purple.Lighten1};")">@Campaign.Type</MudChip>
        </MudText>
        <MudText>
            Creators Wanted:
            <MudChip T="string" Icon="@Icons.Material.Filled.Person" Color="Color.Tertiary">@Campaign.Contracts.Count/@Campaign.CreatorLimit</MudChip>
        </MudText>
        if (Contract is not null)
        {
            <MudText>
                Application Status:
                <MudChip T="string" Icon="@Icons.Material.Filled.Pending" Color="Color.Warning">@Contract.State</MudChip>
            </MudText>
        }
    }
</MudStack>

@code {
    [Parameter] public Campaign? Campaign { get; set; }
    [Parameter] public Contract? Contract { get; set; }
}